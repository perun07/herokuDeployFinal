

<p>
  <strong>Title:</strong>
  <%= @blog_post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @blog_post.user.email %>
</p>

<p>
  <strong>Date:</strong>
  <%= @blog_post.date %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog_post.content %>
</p>

<p>
  <%# <strong>Picture:</strong> %>
  <div class='center'>
  <%= image_tag(@blog_post.picture_url, width: 400) if @blog_post.picture.present? %>
